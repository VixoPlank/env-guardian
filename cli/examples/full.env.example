# Ejemplo completo con todos los tipos de validación

# ===== CONFIGURACIÓN BÁSICA =====

# Nombre de la aplicación
# @type string
APP_NAME=env-guardian

# URL de la API
# @type url
API_URL=https://api.example.com

# Puerto del servidor
# @type number
PORT=3000

# Modo de desarrollo
# @type boolean
DEBUG=true

# ===== AUTENTICACIÓN =====

# Email del administrador
# @type email
ADMIN_EMAIL=admin@example.com

# Secreto JWT
JWT_SECRET=your-secret-key-here-change-in-production

# ===== BASE DE DATOS =====

# URL de conexión a la base de datos
DATABASE_URL=postgresql://user:password@localhost:5432/mydb

# Pool de conexiones
# @type number
DB_POOL_SIZE=10

# ===== SERVICIOS EXTERNOS =====

# API Key de servicio externo
EXTERNAL_API_KEY=your-api-key

# Configuración JSON
# @type json
SERVICE_CONFIG={"timeout":5000,"retries":3}

# ===== VARIABLES OPCIONALES =====

# Feature flag opcional
# @optional
# @type boolean
ENABLE_FEATURE_X=

# URL de webhook opcional
# @optional
# @type url
WEBHOOK_URL=

# Máximo de conexiones simultáneas
# @optional
# @type number
MAX_CONNECTIONS=


